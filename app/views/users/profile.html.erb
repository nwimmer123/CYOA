<div align="center"><%= image_tag "library.jpg", class: "background" %></div>
<div class="cover"></div>
<div class="text">
  <div class="container text-center info-box">
    <h2 id="info">Your Information</h2>
    <h4>Name: <%= @user.name %>
    <br>
    Email: <%= @user.email %></h4>

    <div>
      <% if params[:id] == session[:user_id].to_s || params[:action] == "profile" %>
        <div class="col-xs-1 col-xs-offset-4">
          <%= button_to "Edit Profile", edit_user_path(@user.id), method: "get", class: "btn btn-primary" %>
        </div>
        <div class="col-xs-1 col-xs-offset-1">
          <%= button_to "Delete", url_for(action: :destroy, id: @user.id),method: :delete, data: {confirm: "Are you sure you want to delete yourself and all your wonderfull stories that are read by so many of our delighted users?"}, class: "btn btn-danger" %>
        </div>
    <% end %>
    </div>
  </div>

  <br>
  <br>

  <div class="container text-center">
    <div class="btn-group" role="group">
      <h2>Your Games</h2>
        <div class="container">
          <% @user.games.each do |game| %>
          <div class="col-sm-4">
            <h4 class=""><%= link_to game.title, "/games/#{game.id}" %> </h4>
            <button class="" type="button"><%= button_to "Edit", edit_game_path(game.id), method: "get", class: "btn btn-warning " %></button>
            <button class=""><%= button_to "Delete", delete_game_path(game.id), method: "delete", data: {confirm: "Are you sure you want to delete this game?"}, class: "btn btn-danger" %></button>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>